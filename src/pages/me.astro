---
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";

const seo = {
  title: "Zoltan Simon – Software Design & Engineering Insights",
  description:"Explore expert articles on software engineering, Low-Code/No-Code development, JAMStack innovations, and platform-as-code strategies. Empower your digital transformation with actionable insights and proven tips for modern developers.",
  image:"hello.png"
}
---

<style>
    /* Container uses CSS Grid to create two columns with a 1/3 - 2/3 ratio */
    .grid-1-2 {
        display: grid;
        grid-template-columns: 1fr 2fr;
        min-height: 100vh;
        padding: 0;
    }
    /* Left column with background image */
    .left {
        background: url("/me.jpg") no-repeat center center;
        background-size: cover;
        padding: 0;
        margin: 0;
    }
    .right {
        padding-left:1em;
    }
    .me-nav {
        margin: 0;
        padding-left: 1em;
    }
</style>
<Layout {...seo}>
    <section class="me-nav">
        <nav aria-label="breadcrumb" class="breadcrumb">
            <ul>
                <li><a href="/">Home</a></li>
                <li>about.me</li>
            </ul>
        </nav>
    </section>
    <section class="grid grid-1-2">
        <div class="left">
            <!-- Left column content (background image visible) -->
        </div>
        <div class="right">
            <h3>Hello!</h3>
            <!-- Right column content -->
        </div>
    </section>
    <footer>
        © 2025 zoltansimon.me. Code licensed under MIT.
        Content licensed under CC BY-NC-SA 4.0 unless otherwise noted. For commercial use, please contact hello@zoltansimon.me.
    </footer>
</Layout>
